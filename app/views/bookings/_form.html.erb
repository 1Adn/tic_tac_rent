    <%= form.label :starting_date %>
    <%= form.date_field :starting_date %>
  </div>

  <div class="field">
    <%= form.label :ending_date %>
    <%= form.date_field :ending_date %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ['Pending', 'Accepted', 'Declined'], include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
