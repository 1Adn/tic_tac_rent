      <ul>
      <% booking.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :watch_id %>
    <%= form.collection_select :watch_id, Watch.all, :id, :name, prompt: true %>
  </div>

