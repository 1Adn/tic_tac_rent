<div class="banner-show-watch">
  <div class="container">
    <h1><%= @watch.name %></h1>
    <h2><%= @watch.brand %></h2>
    <h3><%= @watch.movement_type %></h3>
  </div>
</div>

<div class="watch-details-container">
  <div class="container-show-watch container">
    <div class="watch-show-image">
      <% if @watch.photo.attached? %>
        <%= cl_image_tag watch.photo.key, class:"card-img-top rounded-3" %>
      <% else %>
        <img src="https://timekeeping.fr/cdn/shop/products/image_356e963a-0f3b-4223-a0f0-027c9dee3dc3_300x300.jpg?v=1647356887" class="card-img-top rounded-3">
      <% end %>
    </div>

    <div class="watch-show-info">
      <h3>Watch Model :</h3>
      <p><%= @watch.model %></p>

      <h3>Watch Price :</h3>
      <p><%= @watch.price %></p>

      <h3>Description :</h3>
      <p><%= @watch.description %></p>

      <h3>Gender :</h3>
      <p><%= @watch.gender %></p>
      <div class="actions-show-watch container">
    <div>
      <%= link_to "Book this watch !", new_watch_booking_path(@watch), class: "btn-show-watch-one btn btn-primary" %>
    </div>
    <div>
      <%= link_to "<- Back", watches_path, class: "btn-show-watch-two btn btn-secondary" %>
    </div>
  </div>
    </div>
  </div>
</div>
