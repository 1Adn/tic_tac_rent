<div class="black-linear-bg black-linear-bg-watches-index ">
  <div class="container">
    <div class="banner">
      <h1>List of all the Watches:</h1>
    </div>
    <div class="text-center mt-4">
      <%= link_to new_watch_path(@watch), data: { turbo_confirm: "If you are not logged in, you'll be redirected to the login page" }, class: "btn btn rounded-pill" do %>
        <div class="button-text-watches-index">You too post your watch</div>
      <% end %>
    </div>
    <div class="mt-4"></div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4">
      <% @watches.each do |watch| %>
        <% watch_onwer = @users.find(watch.user_id) %>
        <div class="col mb-4">
          <div class="card card-watches-index h-100 border-0 rounded-lg shadow">
            <% if watch.photo.attached? %>
              <%= cl_image_tag watch.photo.key, class:"card-img-top rounded-3" %>
            <% else %>
              <% random_image = @random_images.sample %>
              <img src="<%= random_image %>" class="card-img-top rounded-3">
            <% end %>
            <%# <img src="https://magazine.chrono24.com/cdn-cgi/image/f=auto,metadata=none,fit=cover,q=65,w=1190,h=595,dpr=2.0/2022/08/Omega-Speedmaster-6-Things-Magazin-2-1.jpg" class="card-img-top rounded-3"> %>
            <div class="card-body card-body-watches-index">
              <h5 class="card-title card-title-watches-index text-center mb-2"><%= link_to watch.name, watch_path(watch), class: "text-dark" %></h5>
              <hr class="my-1">
              <p class="card-text mb-1">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
              <hr class="my-1">
              <div class="d-flex justify-content-between">
                <p class="card-text"><small class="text-muted">Posted by <%= watch_onwer.username %></small></p>
                <p><%= watch.price %> $ / day</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
